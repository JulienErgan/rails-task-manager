<%= simple_form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% if @task.persisted? %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>

<% if @task.persisted? %>
  <%= link_to 'Back to task', task_path(@task) %>
<% else %>
  <%= link_to 'Back to list', tasks_path %>
<% end %>


