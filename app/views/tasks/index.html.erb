<h1>My Tasks</h1>

<%= link_to 'New task', new_task_path %>
<!-- source url: https://www.w3schools.com/tags/tryit.asp?filename=tryhtml5_input_type_checkbox -->
<form action="">
  <% @tasks.each do |task| %>
    <input type="checkbox" id="<%= task.id %>">
    <label for="<%= task.id %>"><%= link_to task.title, task_path(task) %></label>
  <% end %>
</form>
